<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/all_relative">
<!-- 主界面选择界面ui-->

    <ImageButton
        android:id="@+id/tl_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintWidth_percent="0.25"
        android:src="@drawable/monitor"/>

    <ImageButton
        android:id="@+id/tl_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tl_1"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintWidth_percent="0.25"
        android:src="@drawable/serverregister"
        />

    <ImageButton
        android:id="@+id/tl_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tl_2"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintWidth_percent="0.25"
        android:src="@drawable/record"/>

    <ImageButton
        android:id="@+id/tl_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tl_3"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintWidth_percent="0.25"
        android:src="@drawable/netcheck"/>

    <ImageButton
        android:id="@+id/bl_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintWidth_percent="0.25"
        android:src="@drawable/datasync"/>

    <ImageButton
        android:id="@+id/bl_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bl_1"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintWidth_percent="0.25"
        android:src="@drawable/userdata"/>

    <ImageButton
        android:id="@+id/bl_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bl_2"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintWidth_percent="0.25"
        android:src="@drawable/modelselect"/>

    <ImageButton
        android:id="@+id/bl_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bl_3"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintWidth_percent="0.25"
        android:src="@drawable/dataclear"/>
</androidx.constraintlayout.widget.ConstraintLayout>
