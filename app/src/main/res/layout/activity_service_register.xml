<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/all_relative">

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:text="设备注册"
        android:textSize="@dimen/x48"
        android:background="@color/bg_blue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.138888888"
        />

    <!--返回按钮-->
    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.07"
        app:layout_constraintHeight_percent="0.138888888"
        style="@style/nullbg"
        android:src="@drawable/back"/>

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="返回"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/x48"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ib_back"
        app:layout_constraintWidth_percent="0.06"
        app:layout_constraintHeight_percent="0.138888888"
        style="@style/nullbg"
        android:src="@drawable/back"/>

    <TextView
        android:id="@+id/tv_expo_id_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="项目id"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/x36"
        android:gravity="center|left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.1"/>

    <EditText
        android:id="@+id/tv_expo_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|left"
        app:layout_constraintLeft_toRightOf="@+id/tv_expo_id_left"
        app:layout_constraintTop_toTopOf="@+id/tv_expo_id_left"
        app:layout_constraintBottom_toBottomOf="@+id/tv_expo_id_left"
        app:layout_constraintWidth_percent="0.4"
        />

    <TextView
        android:id="@+id/tv_expo_add_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="门禁地点"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/x36"
        android:gravity="center|left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintVertical_bias="0.37"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.1"/>

    <EditText
        android:id="@+id/tv_expo_add"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|left"
        app:layout_constraintLeft_toRightOf="@+id/tv_expo_add_left"
        app:layout_constraintTop_toTopOf="@+id/tv_expo_add_left"
        app:layout_constraintBottom_toBottomOf="@+id/tv_expo_add_left"
        app:layout_constraintWidth_percent="0.4"
        />

    <TextView
        android:id="@+id/tv_expo_dname_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="设备名称"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/x36"
        android:gravity="center|left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintVertical_bias="0.486"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.1"/>

    <EditText
        android:id="@+id/tv_expo_dname"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|left"
        app:layout_constraintLeft_toRightOf="@+id/tv_expo_dname_left"
        app:layout_constraintTop_toTopOf="@+id/tv_expo_dname_left"
        app:layout_constraintBottom_toBottomOf="@+id/tv_expo_dname_left"
        app:layout_constraintWidth_percent="0.4"
        />

    <TextView
        android:id="@+id/tv_expo_name_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="项目名称"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/x36"
        android:gravity="center|left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintVertical_bias="0.61"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.1"/>

    <EditText
        android:id="@+id/tv_expo_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|left"
        android:enabled="false"
        app:layout_constraintLeft_toRightOf="@+id/tv_expo_name_left"
        app:layout_constraintTop_toTopOf="@+id/tv_expo_name_left"
        app:layout_constraintBottom_toBottomOf="@+id/tv_expo_name_left"
        app:layout_constraintWidth_percent="0.4"
        />

    <Button
        android:id="@+id/btn_go_rfid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="配置通道门"
        android:textSize="@dimen/x36"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/rect_dark_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.97"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.1"
        />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="确认保存"
        android:textStyle="bold"
        android:textSize="@dimen/x36"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/rect_dark_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.1"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
