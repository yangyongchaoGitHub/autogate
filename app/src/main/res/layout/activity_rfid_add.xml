<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/all_relative">


    <TextView
        android:id="@+id/tv_name_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="名称"
        android:gravity="center|left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.1"/>

    <EditText
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|left"
        app:layout_constraintLeft_toRightOf="@+id/tv_name_left"
        app:layout_constraintTop_toTopOf="@+id/tv_name_left"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_left"
        app:layout_constraintWidth_percent="0.4"
        />

    <TextView
        android:id="@+id/tv_ip_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="ip"
        android:gravity="center|left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.1"/>

    <EditText
        android:id="@+id/tv_ip"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|left"
        app:layout_constraintLeft_toRightOf="@+id/tv_ip_left"
        app:layout_constraintTop_toTopOf="@+id/tv_ip_left"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ip_left"
        app:layout_constraintWidth_percent="0.4"
        />

    <TextView
        android:id="@+id/tv_port_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="端口"
        android:gravity="center|left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.1"/>

    <EditText
        android:id="@+id/tv_port"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|left"
        app:layout_constraintLeft_toRightOf="@+id/tv_port_left"
        app:layout_constraintTop_toTopOf="@+id/tv_port_left"
        app:layout_constraintBottom_toBottomOf="@+id/tv_port_left"
        app:layout_constraintWidth_percent="0.4"
        />

    <TextView
        android:id="@+id/tv_remark_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="备注"
        android:gravity="center|left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.1"/>

    <EditText
        android:id="@+id/tv_remark"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|left"
        app:layout_constraintLeft_toRightOf="@+id/tv_remark_left"
        app:layout_constraintTop_toTopOf="@+id/tv_remark_left"
        app:layout_constraintBottom_toBottomOf="@+id/tv_remark_left"
        app:layout_constraintWidth_percent="0.7"
        />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="返回"
        android:gravity="center"
        android:background="@color/c_btn2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.2"
        />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="确认保存"
        android:gravity="center"
        android:background="@color/c_btn2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.2"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
