<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/all_relative">

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:text="添加通道门"
        android:textSize="@dimen/x48"
        android:background="@color/bg_blue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.138888888"
        />

    <!--返回按钮-->
    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.07"
        app:layout_constraintHeight_percent="0.138888888"
        style="@style/nullbg"
        android:src="@drawable/back"/>

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="返回"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/x48"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ib_back"
        app:layout_constraintWidth_percent="0.06"
        app:layout_constraintHeight_percent="0.138888888"
        style="@style/nullbg"
        android:src="@drawable/back"/>

    <TextView
        android:id="@+id/tv_name_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="名称"
        android:textColor="@color/black"
        android:textSize="@dimen/x36"
        android:textStyle="bold"
        android:gravity="center|right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintVertical_bias="0.26"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.1"/>

    <EditText
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|left"
        app:layout_constraintLeft_toRightOf="@+id/tv_name_left"
        app:layout_constraintTop_toTopOf="@+id/tv_name_left"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_left"
        app:layout_constraintWidth_percent="0.4"
        />

    <TextView
        android:id="@+id/tv_ip_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="ip"
        android:textColor="@color/black"
        android:textSize="@dimen/x36"
        android:textStyle="bold"
        android:gravity="center|right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintVertical_bias="0.37"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.1"/>

    <EditText
        android:id="@+id/tv_ip"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|left"
        app:layout_constraintLeft_toRightOf="@+id/tv_ip_left"
        app:layout_constraintTop_toTopOf="@+id/tv_ip_left"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ip_left"
        app:layout_constraintWidth_percent="0.4"
        />

    <TextView
        android:id="@+id/tv_port_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="端口"
        android:textColor="@color/black"
        android:textSize="@dimen/x36"
        android:textStyle="bold"
        android:gravity="center|right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintVertical_bias="0.48"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.1"/>

    <EditText
        android:id="@+id/tv_port"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|left"
        app:layout_constraintLeft_toRightOf="@+id/tv_port_left"
        app:layout_constraintTop_toTopOf="@+id/tv_port_left"
        app:layout_constraintBottom_toBottomOf="@+id/tv_port_left"
        app:layout_constraintWidth_percent="0.4"
        />

    <TextView
        android:id="@+id/tv_remark_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="备注"
        android:textColor="@color/black"
        android:textSize="@dimen/x36"
        android:textStyle="bold"
        android:gravity="center|right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintVertical_bias="0.593"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintWidth_percent="0.1"/>

    <EditText
        android:id="@+id/tv_remark"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|left"
        app:layout_constraintLeft_toRightOf="@+id/tv_remark_left"
        app:layout_constraintTop_toTopOf="@+id/tv_remark_left"
        app:layout_constraintBottom_toBottomOf="@+id/tv_remark_left"
        app:layout_constraintWidth_percent="0.5"
        />


    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="确认保存"
        android:textStyle="bold"
        android:textSize="@dimen/x36"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/rect_dark_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.1"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
