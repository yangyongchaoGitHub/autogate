<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_gate_status"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="right|center"
        android:text="@string/gate_status"
        android:textStyle="bold"
        android:textSize="@dimen/x40"
        android:textColor="@color/c_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.08"/>

    <TextView
        android:id="@+id/tv_gate_status_value"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/c_black"
        android:textSize="@dimen/x36"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_gate_status"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintWidth_percent="0.65"
        app:layout_constraintHeight_percent="0.08"/>

    <TextView
        android:id="@+id/tv_mqtt_status"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="right|center"
        android:text="@string/mqtt_status"
        android:textStyle="bold"
        android:textSize="@dimen/x40"
        android:textColor="@color/c_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.08"/>

    <TextView
        android:id="@+id/tv_mqtt_status_value"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/c_black"
        android:textSize="@dimen/x36"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_mqtt_status"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintWidth_percent="0.65"
        app:layout_constraintHeight_percent="0.08"/>

    <Button
        android:id="@+id/btn_testcamera"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="go"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.08"/>
</androidx.constraintlayout.widget.ConstraintLayout>
