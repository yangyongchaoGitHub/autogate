<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:text="网络检测"
        android:textSize="@dimen/x48"
        android:background="@color/bg_blue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.138888888"
        />

    <!--返回按钮-->
    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.07"
        app:layout_constraintHeight_percent="0.138888888"
        style="@style/nullbg"
        android:src="@drawable/back"/>

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="返回"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/x48"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ib_back"
        app:layout_constraintWidth_percent="0.06"
        app:layout_constraintHeight_percent="0.138888888"
        style="@style/nullbg"
        android:src="@drawable/back"/>


    <TextView
        android:visibility="gone"
        android:id="@+id/tv_gate_status"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="right|center"
        android:text="@string/gate_status"
        android:textStyle="bold"
        android:textSize="@dimen/x40"
        android:textColor="@color/c_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.08"/>

    <TextView
        android:id="@+id/tv_gate_status_value"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:gravity="center"
        android:textColor="@color/c_black"
        android:textSize="@dimen/x36"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_gate_status"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintWidth_percent="0.65"
        app:layout_constraintHeight_percent="0.08"/>

    <TextView
        android:id="@+id/tv_mqtt_status"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="right|center"
        android:text="@string/mqtt_status"
        android:textStyle="bold"
        android:textSize="@dimen/x40"
        android:textColor="@color/c_black"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.08"/>

    <TextView
        android:id="@+id/tv_mqtt_status_value"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/c_black"
        android:textSize="@dimen/x36"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_mqtt_status"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintWidth_percent="0.65"
        app:layout_constraintHeight_percent="0.08"/>

    <Button
        android:id="@+id/btn_testcamera"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:text="@string/go_camera_test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.08"/>

    <Button
        android:id="@+id/btn_connect_service"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="测试连接服务器"
        android:textStyle="bold"
        android:textSize="@dimen/x36"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/rect_dark_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.1"/>

    <TextView
        android:id="@+id/tv_connect_service"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/c_black"
        android:textSize="@dimen/x36"
        app:layout_constraintBottom_toBottomOf="@+id/btn_connect_service"
        app:layout_constraintLeft_toRightOf="@+id/btn_connect_service"
        app:layout_constraintTop_toTopOf="@+id/btn_connect_service"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.08"/>

    <Button
        android:id="@+id/btn_localip"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/localip"
        android:textStyle="bold"
        android:textSize="@dimen/x36"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/rect_dark_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.1"/>

    <TextView
        android:id="@+id/tv_ip"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/c_black"
        android:textSize="@dimen/x36"
        app:layout_constraintBottom_toBottomOf="@+id/btn_localip"
        app:layout_constraintLeft_toRightOf="@+id/btn_localip"
        app:layout_constraintTop_toTopOf="@+id/btn_localip"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.08"/>
</androidx.constraintlayout.widget.ConstraintLayout>
